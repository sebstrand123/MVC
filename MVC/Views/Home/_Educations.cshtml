@model IEnumerable<MVC.Models.Education>


<div class="display-educations">
    @foreach (var item in Model.OrderByDescending(item => item.ID))
    {
        <div>
            <h4 class="text-uppercase">@Html.DisplayFor(modelItem => item.Name) | @Html.DisplayFor(modelItem => item.School)</h4>
        </div>
        if (item.EndDate == null)
        {
            <div class="educations-body">
                <p class="lead">@Html.DisplayFor(modelItem => item.StartDate) @Html.DisplayFor(modelItem => item.EndDate)</p>
            </div>
        }
        else
        {
            <div class="educations-body">
                <p class="lead">@Html.DisplayFor(modelItem => item.StartDate) - @Html.DisplayFor(modelItem => item.EndDate)</p>
            </div>
        }
    }
</div>
